<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Proyecto003">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4. Controles RadioGroup y RadioButton"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/eTPrimero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese el primer valor"
        android:inputType="number" />

    <EditText
        android:id="@+id/eTSegundo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese el segundo valor"
        android:inputType="number" />

    <RadioGroup
        android:id="@+id/rGOperaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rBSuma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sumar" />

        <RadioButton
            android:id="@+id/rBResta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Restar" />
    </RadioGroup>

    <Button
        android:id="@+id/bOperar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="operar"
        android:text="Operar" />

    <TextView
        android:id="@+id/tVResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Resultdado" />
</LinearLayout>